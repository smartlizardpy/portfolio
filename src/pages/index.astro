---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import projects from '../data/projects.json';
import "../styles/global.css";
import AboutMe from '../components/AboutMe.astro';
const featuredProjects = projects.filter(p => p.featured);
---

<BaseLayout title="Ozan - 13-year-old Developer">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative min-h-screen flex flex-col items-center justify-center overflow-hidden bg-gradient-to-br from-slate-50 via-blue-50 to-purple-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
    <!-- Profile Picture -->
    <img src="/images/ozan.png" alt="Ozan profile" class="w-32 h-32 rounded-full border-4 border-white shadow-xl ring-4 ring-blue-200 dark:ring-blue-500 object-cover mb-6 mt-24" style="background: #e0e7ef;" />
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-20 w-72 h-72 bg-blue-400/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 right-20 w-96 h-96 bg-purple-400/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-gradient-to-r from-blue-400/30 to-purple-400/30 rounded-full blur-3xl animate-pulse delay-500"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Age Badge -->
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm border border-slate-200/50 dark:border-slate-700/50 mb-8">
        <span class="text-sm font-medium text-slate-700 dark:text-slate-300">ðŸŽ‰ 13 years old</span>
      </div>

      <!-- Main Heading -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6">
        <span class="block text-slate-900 dark:text-white">Hi, I'm</span>
        <span class="block gradient-text">Ozan</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-300 mb-8 max-w-3xl mx-auto leading-relaxed">
        A passionate developer building awesome projects with 
        <span class="font-semibold text-blue-600 dark:text-blue-400">Vue.js</span>, 
        <span class="font-semibold text-yellow-600 dark:text-yellow-400">JavaScript</span>, and 
        <span class="font-semibold text-green-600 dark:text-green-400">Python</span>
      </p>

      <!-- Stats -->
      <div class="flex flex-wrap justify-center gap-8 mb-12">
        <div class="text-center">
          <div class="text-3xl font-bold text-slate-900 dark:text-white">5+</div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Projects Built</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-slate-900 dark:text-white">3</div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Years Coding</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-slate-900 dark:text-white">100%</div>
          <div class="text-sm text-slate-600 dark:text-slate-400">Passion</div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
        <a
          href="#projects"
          class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white text-base font-semibold rounded-2xl shadow-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 hover:scale-105 mb-4 mr-0 sm:mr-4 group"
        >
          <svg class="w-5 h-5 mr-3 text-white group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 17v-2a4 4 0 014-4h10a4 4 0 014 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          <span class="font-semibold tracking-wide">View My Work</span>
        </a>
        <a
          href="/blog"
          class="inline-flex items-center justify-center px-8 py-4 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 font-semibold rounded-2xl shadow-lg hover:bg-slate-100 dark:hover:bg-slate-700 transition-all duration-300 hover:scale-105 mb-4 group"
        >
          <svg class="w-5 h-5 mr-3 text-blue-600 dark:text-blue-400 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 21H5a2 2 0 01-2-2V7a2 2 0 012-2h4l2-2 2 2h4a2 2 0 012 2v12a2 2 0 01-2 2z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11H9m6 4H9"></path>
          </svg>
          <span class="font-semibold tracking-wide">Read My Blog</span>
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>
  <AboutMe />
  <!-- Featured Projects Section -->
  <section class="py-20 bg-white dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 dark:text-white mb-4">
          Featured Projects
        </h2>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
          Here are some of my favorite projects I've built. From robotics to web development, 
          I love creating things that solve real problems.
        </p>
      </div>

      <div class="relative">
        <button id="slide-left" aria-label="Scroll left" class="absolute left-0 top-1/2 -translate-y-1/2 z-10 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 shadow rounded-full w-10 h-10 flex items-center justify-center hover:bg-blue-100 dark:hover:bg-blue-900/30 transition hidden md:flex">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/></svg>
        </button>
        <div id="featured-projects-scroll" class="flex gap-8 snap-x snap-mandatory overflow-x-auto px-1 custom-scrollbar scroll-smooth">
          {featuredProjects.map((project) => (
            <div class="min-w-[360px] max-w-xs snap-start flex-shrink-0">
              <ProjectCard project={project} />
            </div>
          ))}
        </div>
        <button id="slide-right" aria-label="Scroll right" class="absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 shadow rounded-full w-10 h-10 flex items-center justify-center hover:bg-blue-100 dark:hover:bg-blue-900/30 transition hidden md:flex">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
        </button>
      </div>
      <style>
        .custom-scrollbar::-webkit-scrollbar {
          height: 10px;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
          background: #a5b4fc;
          border-radius: 6px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
          background: transparent;
        }
      </style>
      <script is:inline>
        const scrollContainer = document.getElementById('featured-projects-scroll');
        const leftBtn = document.getElementById('slide-left');
        const rightBtn = document.getElementById('slide-right');
        function scrollByCard(dir) {
          if (!scrollContainer) return;
          const card = scrollContainer.querySelector('div');
          if (!card) return;
          const cardWidth = card.offsetWidth + 32; // gap-8 = 32px
          scrollContainer.scrollBy({ left: dir * cardWidth, behavior: 'smooth' });
        }
        if (leftBtn && rightBtn && scrollContainer) {
          leftBtn.addEventListener('click', () => scrollByCard(-1));
          rightBtn.addEventListener('click', () => scrollByCard(1));
        }
      </script>

      <div class="text-center mt-12">
        <a
          href="/projects"
          class="inline-flex items-center px-6 py-3 bg-slate-100 hover:bg-slate-200 dark:bg-slate-800 dark:hover:bg-slate-700 text-slate-700 dark:text-slate-300 font-medium rounded-lg transition-colors duration-200"
        >
          View All Projects
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-20 bg-slate-50 dark:bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-slate-900 dark:text-white mb-4">
          What I Do
        </h2>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
          I'm passionate about technology and love learning new things. Here's what I'm currently working with.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Web Development -->
        <div class="bg-white dark:bg-slate-700 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Web Development</h3>
          <p class="text-slate-600 dark:text-slate-300 mb-4">
            Building modern, responsive websites with Vue.js, JavaScript, and the latest web technologies.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300 text-sm rounded-full">Vue.js</span>
            <span class="px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300 text-sm rounded-full">JavaScript</span>
            <span class="px-3 py-1 bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300 text-sm rounded-full">HTML/CSS</span>
          </div>
        </div>

        <!-- Robotics -->
        <div class="bg-white dark:bg-slate-700 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Robotics</h3>
          <p class="text-slate-600 dark:text-slate-300 mb-4">
            Programming autonomous robots for VEX IQ competitions and building mechanical systems.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300 text-sm rounded-full">Python</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300 text-sm rounded-full">VEX IQ</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300 text-sm rounded-full">Autonomous</span>
          </div>
        </div>

        <!-- Photography -->
        <div class="bg-white dark:bg-slate-700 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Photography</h3>
          <p class="text-slate-600 dark:text-slate-300 mb-4">
            Capturing real moments with my dad's Nikon D3300. I love street photography and nature shots.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300 text-sm rounded-full">Nikon D3300</span>
            <span class="px-3 py-1 bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300 text-sm rounded-full">Street</span>
            <span class="px-3 py-1 bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300 text-sm rounded-full">Nature</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-slate-900 dark:bg-black text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="flex items-center justify-center space-x-2 mb-4">
          <img src="/images/ozan.png" alt="Ozan profile" class="w-8 h-8 rounded-lg object-cover border-2 border-white shadow" />
          <span class="text-xl font-bold">Ozan</span>
        </div>
        <p class="text-slate-400 mb-6">
          Building awesome things, one line of code at a time.
        </p>
        <div class="flex justify-center space-x-6">
          <a href="/projects" class="text-slate-400 hover:text-white transition-colors duration-200">Projects</a>
          <a href="/photography" class="text-slate-400 hover:text-white transition-colors duration-200">Photography</a>
          <a href="/drumming" class="text-slate-400 hover:text-white transition-colors duration-200">Drumming</a>
          <a href="/blog" class="text-slate-400 hover:text-white transition-colors duration-200">Blog</a>
        </div>
      </div>
    </div>
  </footer>
</BaseLayout>

<script>
  // Wait for GSAP to load
  window.addEventListener('load', () => {
    if (typeof (window as any).gsap !== 'undefined') {
      const gsap = (window as any).gsap;
      const ScrollTrigger = (window as any).ScrollTrigger;
      gsap.registerPlugin(ScrollTrigger);
      
      // Hero animations
      gsap.from('h1', {
        duration: 1,
        y: 50,
        opacity: 0,
        ease: 'power3.out'
      });
      
      gsap.from('p', {
        duration: 1,
        y: 30,
        opacity: 0,
        delay: 0.3,
        ease: 'power3.out'
      });
      
      // Stats animation
      gsap.from('.flex.flex-wrap.justify-center.gap-8', {
        duration: 0.8,
        y: 30,
        opacity: 0,
        delay: 0.6,
        ease: 'power3.out'
      });
      
      // Project cards animation
      gsap.from('.grid.grid-cols-1.md\\:grid-cols-2.lg\\:grid-cols-3', {
        duration: 0.8,
        y: 50,
        opacity: 0,
        stagger: 0.2,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: '.py-20.bg-white',
          start: 'top 80%'
        }
      });
    }
  });
</script>
