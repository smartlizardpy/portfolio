<script>
  // Drum kit functionality
  const drumPads = document.querySelectorAll(".drum-pad");

  // Visual feedback function
  function triggerDrumPad(drumPad: Element) {
    // Add visual feedback
    drumPad.classList.add("scale-95", "bg-red-50", "dark:bg-red-900/50");

    // Remove feedback after animation
    setTimeout(() => {
      drumPad.classList.remove("scale-95", "bg-red-50", "dark:bg-red-900/50");
    }, 150);

    // TODO: Add actual sound effects here
    console.log(`Playing ${drumPad.getAttribute("data-sound")} sound`);
  }

  // Keyboard event listener
  document.addEventListener("keydown", (e) => {
    const key = e.key.toUpperCase();
    const drumPad = document.querySelector(`[data-key="${key}"]`);

    if (drumPad) {
      e.preventDefault();
      triggerDrumPad(drumPad);
    }
  });

  // Click event listeners
  drumPads.forEach((pad) => {
    pad.addEventListener("click", () => {
      triggerDrumPad(pad);
    });

    // Touch events for mobile
    pad.addEventListener("touchstart", (e) => {
      e.preventDefault();
      triggerDrumPad(pad);
    });
  });

  // Animate drum kit on load
  window.addEventListener("load", () => {
    if (typeof (window as any).gsap !== "undefined") {
      const gsap = (window as any).gsap;

      gsap.from(".drum-pad", {
        duration: 0.6,
        y: 30,
        opacity: 0,
        stagger: 0.1,
        ease: "power3.out",
        delay: 0.2,
      });
    }
  });
</script>

